<Window x:Class="Hexakviz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hexakviz"
        mc:Ignorable="d"
        Title="Hexakviz" Height="450" Width="800" MinHeight="200" MinWidth="200" Loaded="Window_Loaded" SizeChanged="Window_SizeChanged">
    <Grid x:Name="gridMain">
        <Label x:Name="label" Content="Velikost strany:" HorizontalAlignment="Center" Margin="0,0,270,0" VerticalAlignment="Center"/>
        <TextBox x:Name="textBox" Margin="270,0,0,0" TextWrapping="Wrap" Text="7" Height="23" VerticalAlignment="Center" HorizontalAlignment="Center" Width="90" PreviewTextInput="textBox_PreviewTextInput"/>
        <Button x:Name="button" Content="Vytvoř hru" Margin="0,150,0,0" VerticalAlignment="Center" Width="80" HorizontalAlignment="Center" Click="button_Click"/>
        <Polygon Stretch="Uniform" Points="10,10 0,0 10,5"/>
    </Grid>
</Window>
